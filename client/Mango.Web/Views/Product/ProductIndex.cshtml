@model List<Mango.Web.Models.Dtos.ProductDto>

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Products List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CreateProduct" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i> Create New Product
            </a>
        </div>
    </div>
    
    <table class="table">
        <thead>
        <tr>
            <th></th>
            <th>Id</th>
            <th>Product Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Price</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th>
                    <img width="70px" src="@product.ImageUrl"/>
                </th>
                <th>@product.ProductId</th>
                <th>@product.Name</th>
                <th>@product.Description</th>
                <th>@product.CategoryName</th>
                <th>@product.Price$</th>
                <th>
                    <a asp-action="EditProduct" asp-route-productId="@product.ProductId" class="btn btn-success">
                        <i class="fas fa-edit"></i>
                    </a>

                    <a asp-action="DeleteProduct" asp-route-productId="@product.ProductId" class="btn btn-danger">
                        <i class="fas fa-trash"></i>
                    </a>
                </th>
            </tr>
        }
        </tbody>
    </table>
</div>